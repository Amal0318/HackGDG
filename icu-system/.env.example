# ICU System Environment Variables
# Copy this to .env and fill in your credentials

# ========================================
# Alert System - LangChain + Gemini
# ========================================

# Gemini API Key (FREE - Get at: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration for Emergency Alerts
ENABLE_EMAIL_ALERTS=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Gmail Account (Use App Password, not regular password)
# Guide: https://support.google.com/accounts/answer/185833
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Email Addresses
ALERT_EMAIL_FROM=icu-alerts@hospital.com
ALERT_EMAIL_TO=doctor@hospital.com

# ========================================
# Optional: Slack/Discord Webhook
# ========================================
ENABLE_WEBHOOK_ALERTS=false
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
