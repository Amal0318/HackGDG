# Alert System Environment Variables
# Copy this file to .env and fill in your API keys

# LLM Provider: Choose "gemini" or "openai"
LLM_PROVIDER=gemini

# Gemini Settings (FREE tier - recommended)
# Get free key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# OpenAI API Key (Alternative to Gemini)
# OPENAI_API_KEY=sk-your-openai-key-here

# Kafka Connection (default for Docker)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Email Notification (for doctor alerts)
ENABLE_EMAIL_ALERTS=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
ALERT_EMAIL_FROM=icu-alerts@hospital.com
ALERT_EMAIL_TO=doctor@hospital.com

# Webhook for Slack/Discord (optional)
ENABLE_WEBHOOK_ALERTS=false
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Backend API URL
BACKEND_API_URL=http://backend-api:8000
